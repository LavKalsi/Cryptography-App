<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encryption"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:padding="50px"/>

    <EditText
        android:id="@+id/inputText"
        android:layout_weight="1"
        android:background="@drawable/custom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingHorizontal="30px"
        android:lines="8"
        android:hint="Enter text Here" />


    <LinearLayout
        android:id="@+id/encryptButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/round_corners"
        android:padding="16dp"
        android:clickable="true"
        android:layout_marginVertical="15px"
        android:focusable="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/encrypt" />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Encrypt"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/encryptedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:lines="2"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:paddingHorizontal="30px"
        android:layout_weight="1"
        android:textSize="18sp"
        android:background="@drawable/round_corners"
        android:text="Encrypted Text" />




    <TextView
        android:id="@+id/encryptionKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingHorizontal="30px"
        android:layout_marginBottom="5px"
        android:background="@drawable/round_corners"
        android:text="Encryption Key" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <LinearLayout
        android:id="@+id/copyEncryptedButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="10px"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/round_corners"
        android:padding="16dp"
        android:clickable="true"
        android:layout_marginVertical="15px"
        android:focusable="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/copy" />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy Encrypted Text"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:paddingTop="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/copyKeyButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="10px"
        android:background="@drawable/round_corners"
        android:padding="16dp"
        android:clickable="true"
        android:layout_marginVertical="15px"
        android:focusable="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/key" />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy Key"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:paddingTop="8dp" />
    </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:layout_weight="1">

        <LinearLayout
            android:layout_gravity="bottom"
            android:id="@+id/saveToHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10px"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/round_corners"
            android:padding="16dp"
            android:clickable="true"
            android:layout_marginBottom="15px"
            android:focusable="true">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/save" />

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save To History"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:id="@+id/goToDecryptActivity"
            android:layout_marginLeft="10px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/round_corners"
            android:padding="16dp"
            android:clickable="true"
            android:layout_marginBottom="15px"
            android:focusable="true">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/change_page" />

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go To Decryption"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
